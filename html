      { id:'s7', title:'–®–∞—É—Ä–º–∞ –∑ –º–∞–Ω–≥–æ —ñ –∫—Ä–µ–≤–µ—Ç–∫–æ—é', price:129.9, img:'https://instafood.com.ua/images/full_shop_product/2025-04-instafood-040-67efc2e57c4af.png' },
      { id:'s8', title:'–®–∞—É—Ä–º–∞ –∑ –±–∞—Ä–∞–Ω–∏–Ω–æ—é —ñ —Å–ø–∞—Ä–∂–µ–≤–æ—é –∫–≤–∞—Å–æ–ª–µ—é', price:139.9, img:'https://instafood.com.ua/images/full_shop_product/2025-04-instafood-040-67efc2e57c4af.png' },
